<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Products and Categories | @ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProdsAndCats.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <div class="navbar-body border-bottom box-shadow mb-3 p-3">
            <div class="nav-bottom d-flex justify-content-center gap-3">
                <a class="@(ViewData["Title"]?.ToString() == "Products" ? "active" : "navlink")" asp-area="" asp-controller="Home" asp-action="Products">Products</a>
                <p class="navlink">|</p>
                <a class="@(ViewData["Title"]?.ToString() == "Categories" ? "active" : "navlink")" asp-area="" asp-controller="Home" asp-action="Categories">Categories</a>
            </div>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Products and Categories
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
